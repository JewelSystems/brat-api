{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "lib": ["ES6"],
    "esModuleInterop": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "typeRoots": [ "./types", "./node_modules/@types"],
    "strictPropertyInitialization": false
  },
  "include": ["./src/*/"],
  "exclude": ["node_modules", "types"]
}